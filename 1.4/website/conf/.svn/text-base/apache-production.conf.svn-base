<VirtualHost *:80>
    ServerName bcd-nv.com
    ServerAlias bcd-nv.com
    ServerAlias www.bcd-nv.com
    ServerAlias bcd-productie.fabriquehq.nl

    #RewriteEngine On
    #RewriteCond %{HTTP_HOST} ^bcd-nv.com [NC]
    #RewriteRule ^(.*)$ http://www.bcd-nv.com$1 [R=301,L]

    DocumentRoot /var/www/bcd/production-env/

    Alias /media/ /var/www/bcd/production/media/
    <Directory /var/www/bcd/production/media>
        Order deny,allow
        Allow from all
    </Directory>

    Alias /static/ /var/www/bcd/production/static/
    <Directory /var/www/bcd/production/static>
        Order deny,allow
        Allow from all
    </Directory>

    WSGIDaemonProcess bcd.production user=www-data group=www-data processes=1 threads=25 umask=0002 display-name=%{GROUP}
    WSGIProcessGroup bcd.production
    WSGIScriptAlias / /var/www/bcd/production/wsgi/production.wsgi
</VirtualHost>

